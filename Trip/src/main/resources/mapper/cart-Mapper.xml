	<insert id="insertCart">
		INSERT INTO TRIP_CART (
			CART_CODE
			, ITEM_CODE
			, MEM_ID
			, TRAVELERS
		) VALUES (
			(SELECT COALESCE(MAX(CART_CODE), 0) + 1 FROM TRIP_CART ALIAS_FOR_SUBQUERY)
			, #{itemCode}
			, #{memId}
			, #{travelers}
		)
	</insert>

	<insert id="updateCart">
		UPDATE TRIP_CART
		SET TRAVELERS = TRAVELERS + #{travelers}
		WHERE ITEM_CODE = #{itemCode} AND MEM_ID = #{memId}
	</insert>

	<select id="selectExistCart" resultMap="cart">
		SELECT ITEM_CODE
		FROM TRIP_CART
		WHERE ITEM_CODE = #{itemCode} AND MEM_ID = #{memId}
	</select>
	
	<select id="selectCartList" resultMap="cartView">
		SELECT CART_CODE
			, ITEM_CODE
			, ITEM_NAME
			, ITEM_PRICE
			, TOTAL_PRICE
			, TRAVELERS
			, BUY_DATE
			, MEM_ID
			, ATTACHED_IMG_NAME
		FROM CART_VIEW
		WHERE MEM_ID = #{memId}
		ORDER BY CART_CODE DESC
	</select>
	
	<delete id="deleteCart">
		DELETE TRIP_CART
		WHERE CART_CODE = #{cartCode}
	</delete>
	
	<delete id="deleteCarts">
		DELETE TRIP_CART
		WHERE MEM_ID = #{memId}
		AND ITEM_CODE IN
		<foreach collection="itemCodeArr" item="itemCode" open="(" close=")" separator=",">
			#{itemCode}
		</foreach>
	</delete>
	
	<update id="updateItemCnt">
		UPDATE TRIP_CART
		SET
		TRAVELERS = #{travelers}
		<!-- WHERE CART_NUM = #{cartNum} -->
		WHERE MEM_ID = #{memId}
		AND ITEM_CODE = #{itemCode}
	</update>
	
